@{
    Layout = null;
}
@model List<Game>

@{
    if (Model.Count != 0)
    {
        foreach (var item in Model)
        {
            <div class="card">
                <a class="link" asp-action="Game" asp-route-name="@item.Name">
                    <div class="content-image-container border-r3">
                        <img class="content-image" src="@item.GetMainImg()">
                    </div>
                    <div class="card-bottomtext">
                        <span class="card-text card-text-gamename">@item.Name</span>
                        <span class="card-text card-text-studio">@item.Platform</span>
                        @{
                            if (item.Price == 0)
                            {
                                <span class="card-text-price">Бесплатно</span>
                            }
                            else
                            {
                                <span class="card-text-price">@item.Price USD</span>
                            }
                        }
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <h1 style="margin:auto;">Ничего не найдено</h1>
    }
}
